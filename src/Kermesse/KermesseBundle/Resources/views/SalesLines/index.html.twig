{% extends '::base.html.twig' %}

{% block body -%}
    <h1>SalesLines list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Datecreated</th>
                <th>Count</th>
                <th>Priceunit</th>
                <th>Pricetotal</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('saleslines_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{% if entity.dateCreated %}{{ entity.dateCreated|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.count }}</td>
                <td>{{ entity.priceUnit }}</td>
                <td>{{ entity.priceTotal }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('saleslines_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('saleslines_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('saleslines_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
